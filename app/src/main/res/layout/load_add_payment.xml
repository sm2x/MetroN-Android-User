<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/centerImagePay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"/>
    <com.tronline.user.CustomText.CustomBoldRegularTextView
        android:id="@+id/req_statusPay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/centerImagePay"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:visibility="visible"
        android:text="Please wait while we add your card"
        android:textColor="@color/ripple_blue"
        android:textSize="20sp" />

</RelativeLayout>