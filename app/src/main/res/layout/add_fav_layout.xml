<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="3dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.tronline.user.CustomText.CustomBoldRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Place name"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingLeft="10dp"/>
    <com.tronline.user.CustomText.CustomRegularEditView
        android:id="@+id/addFav_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:hint="eg: Home"/>
    <com.tronline.user.CustomText.CustomBoldRegularTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter place address"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15sp"
        android:paddingLeft="10dp"/>
    <AutoCompleteTextView
        android:id="@+id/addFav_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:hint="eg: koramangala"/>
    <com.tronline.user.CustomText.CustomBoldRegularTextView
        android:id="@+id/addFav_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="OK"
        android:singleLine="true"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@color/black"
        android:padding="10dp"/>
</LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>